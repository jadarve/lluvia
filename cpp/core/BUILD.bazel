        "LUA": "lua/ll/library.lua"
    },
    data = [
        "//lua:ll_lua_library"
    ],
)

cc_library (
    name = "core_cc_library",
    srcs = glob(["src/**/*.cpp"]),
    hdrs = glob(["include/**/*.h"]) + [":core_lua_cc_library_header"],
    strip_include_prefix = "include/",
    copts = [
        "--std=c++17",
        "-stdlib=libstdc++",
    ],
    linkstatic = True,
    linkopts = [
        "-lvulkan",
        "-lm",
        "-ldl",
    ],
    deps = [
        "@sol//:sol_cc_library",
        "@lua//:lua_cc_library",
    ],
    visibility = ["//visibility:public"]
)

